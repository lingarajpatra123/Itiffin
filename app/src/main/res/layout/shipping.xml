<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="match_parent"
    android:id="@+id/scrollclick">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/pageholder"
        android:weightSum="20">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shipp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHIPPING ADDRESS"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="14dp"
                android:id="@+id/text_Shipping" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/pad_10dp"
            android:id="@+id/nameholder"
            android:layout_weight="1">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="12sp"
                android:color="@color/black"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"/>

            <EditText
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:layout_weight="1"
                android:id="@+id/name" />


        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/mob_hold">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile"
            android:textSize="12sp"
            android:color="@color/black"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:id="@+id/mobile" />

            <EditText
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="+91 XXXXXXXXXX"
                android:ems="10"
                android:layout_weight="1"
                android:id="@+id/mob" />


            </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="25dp"
            android:id="@+id/Add_hold">


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/rd_shippingaddress"
        android:id="@+id/rgaddress"
        android:layout_weight="1">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rd_shippingaddress"
            android:text="@string/Add1"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rd_billingaddress"
            android:text="@string/Add2"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_n_add"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:textColor="#0288D1"
        android:textSize="@dimen/txt_12sp"
        android:id="@+id/Add_New" />

</LinearLayout>
        <LinearLayout
            android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:weightSum="2"
            android:id="@+id/Add_filed">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:id="@+id/address">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:textSize="12dp"
                android:text="Address"
                android:id="@+id/add_text" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/ent_filed">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:id="@+id/txtdoorno"
                android:hint="Door Number"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:id="@+id/txtstreet"

                android:hint="Street" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:id="@+id/txtcity"
                android:hint="City" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:id="@+id/txtpin"
                android:hint="Pin" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:id="@+id/txtstate"
                android:hint="State" />
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:id="@+id/Item_Cont">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff949699"
            android:weightSum="6"
            android:id="@+id/nevig">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Item"
                android:id="@+id/item"
                android:layout_weight="4"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Price"
                android:id="@+id/price"
                android:layout_weight="1"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Qty"
                android:id="@+id/qty"
                android:layout_weight="1"
                android:singleLine="false"
                android:textColor="#FFFFFF" />
            </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:background="#FFFFFF">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img1"
                android:src="@drawable/cross"
                android:background="#FFFFFF"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&quot;550Kcal&quot; Wellness Meal"
                android:id="@+id/k550_txt1"
                android:layout_weight="1.50"
                android:layout_marginTop="6dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1800"
                android:id="@+id/eig_rs"
                android:layout_weight="1"
                android:textColor="#000000"
                android:layout_marginTop="6dp"
                android:layout_marginRight="4dp" />

            <EditText
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/qty_text"
                android:layout_weight="1"
                android:enabled="false"
                android:layout_marginLeft="10dp" />
            </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Veg"
                android:id="@+id/vg1"
                android:layout_weight="0.50"
                android:textColor="#000000"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly"
                android:id="@+id/text_mont"
                android:layout_weight="1"
                android:textColor="#ff026939"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:background="#FFFFFF"
            android:id="@+id/k550v">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:src="@drawable/cross"
                android:background="#FFFFFF"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&quot;550Kcal&quot; Wellness Meal"
                android:id="@+id/k550"
                android:layout_weight="1.50"
                android:layout_marginTop="6dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="525"
                android:id="@+id/five_txt"
                android:layout_weight="1"
                android:textColor="#000000"
                android:layout_marginTop="6dp"
                android:layout_marginRight="4dp" />

            <EditText
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/qty_five"
                android:layout_weight="1"
                android:enabled="false"
                android:layout_marginLeft="@dimen/pad_10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Veg"
                android:id="@+id/vg"
                android:layout_weight="0.50"
                android:textColor="#000000"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly"
                android:id="@+id/weekly"
                android:layout_weight="1"
                android:textColor="#ff026939"
                android:layout_marginTop="4dp" />
        </LinearLayout>

     </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/line_div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_10dp"
            android:layout_marginTop="@dimen/pad_10dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/pad_10dp"
            android:layout_marginRight="@dimen/pad_10dp"
            android:weightSum="1">
            <View
                android:id="@+id/currentTimeLineView"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/b10"
                android:layout_weight="0.01"/>


        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/sub"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
         <TextView
             android:id="@+id/sb"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="SUBTOTAL"
             android:layout_marginLeft="@dimen/pad_10dp"
             android:layout_marginRight="@dimen/pad_10dp"/>
            <TextView
                android:id="@+id/tot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1320.00"
                android:layout_marginBottom="@dimen/pad_10dp"
                android:layout_marginLeft="@dimen/pad_31dp"
                android:layout_marginRight="@dimen/pad_10dp" />

        </LinearLayout>

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="bottom"
            android:background="#FFFFFF"
            android:layout_marginTop="@dimen/pad_10dp">


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PAY NOW"
                android:onClick="onClick"
                android:id="@+id/btnpaynow"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:background="#ff949699"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/pad_10dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:layout_marginTop="@dimen/pad_10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CALL US"
                android:onClick="onClick"
                android:id="@+id/btncallus6"
                android:background="#ff95979a"
                android:layout_marginRight="2dp"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:layout_weight="1"
                android:layout_gravity="bottom" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MY PLAN"
                android:onClick="onClick"
                android:id="@+id/btnmyplan5"
                android:background="#ff95979a"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:layout_gravity="bottom" />

        </LinearLayout>

        </LinearLayout>
</ScrollView>
